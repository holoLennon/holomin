<!--ManufacturerList，药品生产厂家列表-->
<ion-view view-title="药品生产厂家列表"  cache-view='false' hide-tabs="false" >
	<ion-nav-buttons side="right">
		<h4></h4><a class="button icon ion-plus-round" href="#/tab/Manufacturer/0"></a>
	</ion-nav-buttons>
	<ion-content class="has-tabs has-header">
        <ion-refresher pulling-text="下拉刷新..." on-refresh="doRefresh()"></ion-refresher>
        <ion-list class="list">
            <ion-item class="item-avatar" bindonce collection-repeat="obj in list" href="#/tab/Manufacturer/{{obj.id}}" collection-item-width="'100%'" collection-item-height="65px">
                <img ng-src="{{obj.img1}}" reset-img />
                <h2>{{obj.myname}}</h2>
                <p>
				<span>用户ID:{{obj.id}}</span>
				<span class="item-note ago" am-time-ago="obj.gmtCreate"></span>
				<span>状态:{{obj.statusValidOrNotString}}</span>
				<span>名称:{{obj.name}}</span>
				<span>图:{{obj.img}}</span>
				<span>营业执照号:{{obj.idbiz}}</span>
				<span>联系人:{{obj.contentname}}</span>
				<span>联系电话:{{obj.tele}}</span>
				<span>传真:{{obj.fax}}</span>
				<span>手机号:{{obj.mobile}}</span>
				</p>
            </ion-item>
        </ion-list>
        <ion-infinite-scroll on-infinite="more()" distance="1%" ng-if="page.hasNextPage"></ion-infinite-scroll>
        <ion-spinner class="topic-spinner ng-hide" ng-show="!list" ng-style="{'top':getHalfHeight()+'px'}"></ion-spinner>
    </ion-content>
</ion-view>
