	public WaEntityArticle csnewget(User sessionUser,WaEntityArticle waEntityArticle,String copyfrom,String copyfromwhere,boolean needBefore,boolean needAfter) throws BoException,Exception{
		if(waEntityArticle==null)
			waEntityArticle=new WaEntityArticle();
		//如果是从其它表复制过来的
		if(StringUtils.isNotBlank(copyfrom)&&StringUtils.isNotBlank(copyfromwhere)){
			Object objsrc=specService.getFirst(copyfrom, copyfromwhere, null);
			commonzSvrUitlsSpec.obj2obj(sessionUser,objsrc, waEntityArticle,copyfrom ,"WaEntityArticle");
			waEntityArticle.setId(null);
		}
		if(needBefore)
			commonzSvrUitlsSpec.newgetBefore(sessionUser,waEntityArticle);
		if(needAfter)
			newgetAfter(sessionUser,waEntityArticle);
		return waEntityArticle;
	}
