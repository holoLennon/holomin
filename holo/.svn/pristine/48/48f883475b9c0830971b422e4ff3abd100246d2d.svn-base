	/**
	 * 批量提交
	 */
	@RequestMapping(value="/createmuti")
	public void createmuti(ProductTypeLinkProduct formobj,ModelMap model,HttpServletRequest request,HttpServletResponse response,Integer[] productTypeIds)  {
		User sessionUser=null;
		try {
			sessionUser=sessionUserUtils.userFromRequestWithException(request);
		} 
		catch (NeedLoginException e) {
			writeJson(request, response, new Json(false,"操作失败！"+e.getMessage()));
			return;
		}		
		for (Integer item : productTypeIds) {
			ProductTypeLinkProduct productTypeLinkProduct=new ProductTypeLinkProduct();
			BeanUtils.copyProperties(formobj, productTypeLinkProduct);
			productTypeLinkProduct.setProductTypeId(item);
			try {
				productTypeLinkProductService.saveCreate(sessionUser,new ProductTypeLinkProduct(),productTypeLinkProduct, null, null, true, true);
			} 
			catch (NeedLoginException e) {
				writeJson(request, response, new Json(false,"操作失败！"+e.getMessage()));
			} 
			catch (BoException e) {
				writeJson(request, response, new Json(false,"操作失败！"+e.getMessage()));
			}
			catch (Exception e) {
				e.printStackTrace();
				writeJson(request, response, new Json(false,"操作失败！"));
			}
			
		}
		writeJson(request, response, new Json(true,"添加完成！"));
