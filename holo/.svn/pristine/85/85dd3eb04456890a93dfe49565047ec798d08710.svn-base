	</mvc:interceptors>
	

		
	<!-- 启动后，加些配置，依赖前面的BEAN，放在最后实例化 -->
	<bean id="springInit" class="com.zmax.yijian.web.utils.SpringInit" init-method="init" />		
</beans>  
