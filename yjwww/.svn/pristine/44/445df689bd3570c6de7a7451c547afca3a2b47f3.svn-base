<!--OrderrList，订单列表-->
<ion-view view-title="订单列表" cache-view='false' >
	<ion-nav-buttons side="right">
		<h4></h4>
	</ion-nav-buttons>
	<ion-content >
        <ion-refresher pulling-text="下拉刷新..." on-refresh="doRefresh()"></ion-refresher>
    <ion-list class="list">
      <ion-item class="item-avatar" bindonce collection-repeat="obj in list" ng-click="rx('#/tab/Orderr/'+obj.id)" collection-item-width="100%" collection-item-height="165px" style="border: none;border-bottom: 2px solid #ddd;">
        <img ng-src="{{obj.img1}}" reset-img style="height: 100px;border-radius: 0;margin-left: 5px;"/>
        <div class="item" style="font-size: 14px;font-weight: normal;color: #8c8c8c;border: none;margin-top: -10px;background: none;overflow: visible;padding-left: 8px;">
          <h2>{{obj.title}}</h2>
          <p style="font-size: 18px;color: #8c8c8c;">会员： {{obj.memberIdMemberObj.name}}</p>
          <span>订单号： {{obj.sn}}</span><br/>
          <span>支付状态：{{obj.statusString}}</span><br/>
          <span>订单来源：{{obj.iotypeString}}</span><br/>
          <span style="color: red;">药品总额：￥{{obj.sumprice}}</span><br/>
          <span>订单生成时间：{{obj.gmtCreateString}}</span>
        <!--  <ul>
            <li class="fl" style="width: 45%;line-height: 26px;">
              <p style="font-size: 20px;color: #8c8c8c;">会员： {{obj.memberIdMemberObj.name}}</p>
            </li>
            <li class="fl" style="width: 55%;line-height: 26px;">
              <span>订单号： {{obj.sn}}</span>
            </li>
