<!--DoctorProductList，医生的药架列表-->
<ion-view view-title="我的药架"  cache-view="false">
	<ion-nav-buttons side="right">
	</ion-nav-buttons>
	<ion-content class="has-tabs has-header">
        <ion-refresher pulling-text="下拉刷新..." on-refresh="doRefresh()"></ion-refresher>
        <div class="row" style="position: relative;">
            <ion-list class="list">
                <ion-item class="item-avatar" bindonce collection-repeat="obj in list" collection-item-width="98%" collection-item-height="150px" >
                    <img ng-src="{{obj.productIdProductObj.img1}}" reset-img style="max-width: 65px;max-height: 65px;border-radius:0px;margin-left: 1%"/>
                    <div style="margin-left: 8%;">
                      <div ng-click="gotoProduct(obj.productId)">
                        <h2 style="line-height: 35px;">{{obj.productIdProductObj.commonname}}</h2>
                        <span style="font-size: 14px;line-height: 25px" >规格:{{obj.productIdProductObj.productstyle}}</span><br>
                        <span style="font-size: 14px;line-height: 25px" >价格:￥{{obj.productIdProductObj.price}}</span>
                        <p style="font-size: 14px;line-height: 25px;width: 83%;">{{obj.productIdProductObj.manufacturerIdString}}</p>
                      </div>
                      <div style="position: absolute;top:46%;left:80%;" >
                        <button ng-if="act!=1" class="button icon ion-ios-close-outline" style="background:none;border: none;color: red;" ng-click="delDoctorProduct(obj.id)"></button>
                        <button ng-if="act==1" class="button icon ion-ios-checkmark-outline" ng-click="chooseThis(obj)" style="background:none;border: none;"></button>
                      </div>
                    </div>
                </ion-item>
            </ion-list>
        </div>
        <ion-infinite-scroll on-infinite="more()" distance="1%" ng-if="page.hasNextPage"></ion-infinite-scroll>
        <ion-spinner class="topic-spinner ng-hide" ng-show="!list" ng-style="{'top':getHalfHeight()+'px'}"></ion-spinner>
    </ion-content>
</ion-view>
