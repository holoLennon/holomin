<!--ProductList，商品列表-->
<ion-view view-title="商品列表" cache-view='false' >
	<ion-nav-buttons side="right">
		<h4></h4>
	</ion-nav-buttons>
	<ion-content class="has-tabs has-header">
        <ion-refresher pulling-text="下拉刷新..." on-refresh="doRefresh()"></ion-refresher>
        <ion-list class="list">
            <ion-item class="item-avatar" bindonce collection-repeat="obj in list" ng-click="rx('#/tab/Product/'+obj.id)" collection-item-width="100%" collection-item-height="150px">
              <img ng-src="{{obj.img1}}" reset-img style="max-width: 65px;max-height: 65px;border-radius: 0px;"/>
              <h2>{{obj.commonname}}<span ng-if="obj.itypeMiString=='医保类'" style="color: #FE918C;margin-left: 10px;font-size: 14px;">医保</span></h2><br>
              <span>价格：￥{{obj.price}}</span><br>
              <span>规格:{{obj.productstyle }}</span><br>
            </ion-item>
        </ion-list>
        <ion-infinite-scroll on-infinite="more()" distance="1%" ng-if="page.hasNextPage"></ion-infinite-scroll>
        <ion-spinner class="topic-spinner ng-hide" ng-show="!list" ng-style="{'top':getHalfHeight()+'px'}"></ion-spinner>
    </ion-content>
</ion-view>
