<!--PrescriptProductList，药方产品列表-->
<ion-view view-title="药品列表"   cache-view='false' >
  <ion-nav-buttons side="right">
    <h4></h4>
    <a class="button icon ion-ios-plus-outline" style="background-color: #7E5335;border: none;" ng-click="rx('#/tab/PrescriptCreate/'+actid)"></a>
    <a class="button icon ion-ios-trash-outline" ng-click="change()" style="background-color: #7E5335;border: none;"></a>

  </ion-nav-buttons>
	<ion-content class="has-tabs has-header">
        <ion-refresher pulling-text="下拉刷新..." on-refresh="doRefresh()"></ion-refresher>
        <ion-list class="list">
            <ion-item class="item-avatar" bindonce collection-repeat="obj in list"  collection-item-width="'100%'" collection-item-height="100px">
              <img ng-src="{{obj.img1}}" reset-img style="max-width: 65px;max-height: 65px;"/>
              <div ng-click="rx('#/tab/PrescriptProduct/'+obj.id)" style="margin-left: 5%;">
                <h2 style="line-height: 28px;">{{obj.myname}}</h2>
                <p style="font-size: 16px;">
                  <span>数量:{{obj.num}}{{obj.punitString}}</span><br>
                  <span>药方:{{obj.prescriptIdString}}</span>
                </p>
                </div>
              <div class="row" style="margin-left: 25px;margin-top: 15px;" ng-if="act!=1">
                <button ng-if="vm.delshow" class="button icon ion-ios-trash-outline" style="margin-top: -68px;margin-left:160px;background-size: 50%;background-position: center;height: 22px;width: 22px;border:none ;border-radius: 5px;" ng-click="delPrescripProduct(obj)"></button>
              </div>
            </ion-item>

        </ion-list>
        <ion-infinite-scroll on-infinite="more()" distance="1%" ng-if="page.hasNextPage"></ion-infinite-scroll>
        <ion-spinner class="topic-spinner ng-hide" ng-show="!list" ng-style="{'top':getHalfHeight()+'px'}"></ion-spinner>
    </ion-content>
</ion-view>
